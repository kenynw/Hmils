<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cube.hmils">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".module.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".module.account.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".module.order.RoomNumActivity">
        </activity>
        <activity android:name=".module.order.RoomParamsActivity">
        </activity>
        <activity android:name=".module.order.OrderConfirmActivity">
        </activity>
        <activity android:name=".module.account.ResetPwdActivity">
        </activity>
        <activity android:name=".module.account.ForgotActivity">
        </activity>
        <activity android:name=".module.user.QRCodeActivity">
        </activity>
        <activity android:name=".module.user.ProfileActivity">
        </activity>
        <activity android:name=".module.user.EditAddressActivity">
        </activity>
        <activity android:name=".module.user.ClientDetailActivity">
        </activity>
        <activity android:name=".module.order.ServiceDetailActivity">
        </activity>
        <activity android:name=".module.order.OrderSearchActivity">
        </activity>
    </application>

</manifest>