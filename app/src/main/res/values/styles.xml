<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bgWindow</item>
        <item name="actionBarSize">44dp</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorHint">@color/textTertiary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>
    <style name="TextSubhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>
    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>
    <style name="TextCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="TitleToolbar" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="com.cube.hmils:contentInsetLeft">0dp</item>
        <item name="com.cube.hmils:contentInsetStart">0dp</item>
        <item name="com.cube.hmils:contentInsetStartWithNavigation">0dp</item>
        <item name="com.cube.hmils:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="com.cube.hmils:theme">@style/PopupTheme</item>
    </style>
    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="CommonTab">
        <item name="com.cube.hmils:tabIndicatorColor">@color/white</item>
        <item name="com.cube.hmils:tabIndicatorHeight">3dp</item>
        <item name="com.cube.hmils:tabSelectedTextColor">@color/white</item>
        <item name="com.cube.hmils:tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/whiteLight</item>
    </style>

    <style name="ButtonLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/btn_radius_accent_selector</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseAvatarImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="com.cube.hmils:actualImageScaleType">centerCrop</item>
        <item name="com.cube.hmils:placeholderImage">@mipmap/def_image_avatar</item>
        <item name="com.cube.hmils:placeholderImageScaleType">centerCrop</item>
        <item name="com.cube.hmils:failureImage">@mipmap/def_image_avatar</item>
        <item name="com.cube.hmils:failureImageScaleType">centerCrop</item>
        <item name="com.cube.hmils:roundAsCircle">true</item>
    </style>

</resources>
