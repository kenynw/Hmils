<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/btn_radius_accent_selector</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>