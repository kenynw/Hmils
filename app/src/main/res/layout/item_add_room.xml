<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="@mipmap/bg_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_add_room_width"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/text_room_width"
        android:textColor="@color/textSecondary"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/et_add_room_w"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:background="@drawable/bg_radius_input"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/tv_add_room_width"
        app:layout_constraintRight_toLeftOf="@+id/iv_add_room_delete"
        app:layout_constraintTop_toTopOf="@+id/tv_add_room_width"
        />

    <TextView
        android:id="@+id/tv_add_room_height"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:gravity="center"
        android:text="@string/text_room_height"
        android:textColor="@color/textSecondary"
        app:layout_constraintTop_toBottomOf="@id/tv_add_room_width"
        />

    <EditText
        android:id="@+id/et_add_room_h"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:background="@drawable/bg_radius_input"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/tv_add_room_height"
        app:layout_constraintRight_toRightOf="@id/et_add_room_w"
        app:layout_constraintTop_toTopOf="@+id/tv_add_room_height"
        />

    <ImageView
        android:id="@+id/iv_add_room_delete"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:background="@drawable/bg_radius_pink"
        android:scaleType="centerInside"
        android:src="@drawable/ic_del"
        app:layout_constraintBottom_toBottomOf="@id/et_add_room_h"
        app:layout_constraintLeft_toRightOf="@id/et_add_room_w"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_add_room_w"
        />

</android.support.constraint.ConstraintLayout>