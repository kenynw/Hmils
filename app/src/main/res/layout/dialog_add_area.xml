<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_add_area_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        android:text="@string/text_add_area"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_add_area_width"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginRight="@dimen/spacing_large"
            android:gravity="center"
            android:text="房间长"
            android:textColor="@color/textSecondary"
            />

        <EditText
            android:id="@+id/et_add_area_width"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_round_input"
            android:gravity="center"
            android:inputType="numberDecimal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/text_cm"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_body"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_area_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_add_area_width"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginRight="@dimen/spacing_large"
            android:gravity="center"
            android:text="房间长"
            android:textColor="@color/textSecondary"
            />

        <EditText
            android:id="@+id/et_add_area_height"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_round_input"
            android:gravity="center"
            android:inputType="numberDecimal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/text_cm"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_body"
            />

    </LinearLayout>

    <View
        android:id="@+id/div_add_area"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/divPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_add_area"
        >

        <Button
            android:id="@id/btn_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:text="@string/btn_cancel"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:background="@color/divPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/div_add_area"
            />

        <Button
            android:id="@id/btn_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:text="@string/btn_ok"
            />

    </LinearLayout>

</LinearLayout>