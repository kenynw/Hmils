<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cube.hmils.module.order.OrderDetailActivity"
    >

    <include layout="@layout/include_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_order_detail_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/spacing_tiny"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_small"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:src="@mipmap/ic_left"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_size_body_material"
                    tools:text="2 of 7"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/spacing_tiny"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_small"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:src="@mipmap/ic_right"
                    />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_order_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_order_detail_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_detail"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_body_material"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_order_detail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_size_caption"
                    tools:text="共3件产品"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:text="合计："
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_size_caption"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/textOrange"
                    android:textSize="@dimen/text_size_caption_material"
                    />

                <TextView
                    android:id="@+id/tv_order_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textOrange"
                    android:textSize="@dimen/text_size_large_material"
                    tools:text="400"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_detail_pay"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginTop="22dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_normal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_size_body_material"
                    />

                <RadioGroup
                    android:id="@+id/rg_order_detail_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rbtn_order_detail_online"
                        android:layout_width="114dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:background="@drawable/btn_pay_way_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="线上支付"
                        android:textColor="@color/secondary2accent"
                        />

                    <RadioButton
                        android:id="@+id/rbtn_order_detail_offline"
                        android:layout_width="114dp"
                        android:layout_height="44dp"
                        android:background="@drawable/btn_pay_way_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="线下支付"
                        android:textColor="@color/secondary2accent"
                        />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_detail_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="@dimen/spacing_small"
                android:paddingRight="@dimen/spacing_small"
                android:paddingTop="@dimen/spacing_small"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="175"
                        android:gravity="center"
                        android:text="订单时间"
                        android:textColor="@color/textSecondary"
                        android:textSize="9sp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="130"
                        android:gravity="center"
                        android:text="订单时间"
                        android:textColor="@color/textSecondary"
                        android:textSize="9sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="175"
                        android:gravity="center"
                        android:textColor="@color/textPrimary"
                        android:textSize="9sp"
                        tools:text="2017-09-01 12:21"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="130"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="9sp"
                        tools:text="待发货"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@color/divPrimary"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/btn_order_detail_contact"
                        android:layout_width="76dp"
                        android:layout_height="22dp"
                        android:background="@drawable/btn_radius_stroke_divider"
                        android:drawableLeft="@mipmap/icon_tel_azry"
                        android:drawablePadding="@dimen/spacing_tiny"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="@dimen/spacing_small"
                        android:text="联系用户"
                        android:textColor="@color/textSecondary"
                        android:textSize="9sp"
                        />

                    <Button
                        android:id="@+id/btn_order_detail_log"
                        android:layout_width="76dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:background="@drawable/btn_radius_stroke_divider"
                        android:drawableLeft="@mipmap/icon_tel_azry"
                        android:drawablePadding="@dimen/spacing_tiny"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="@dimen/spacing_small"
                        android:text="查看物流"
                        android:textColor="@color/textSecondary"
                        android:textSize="9sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_small"
                android:paddingRight="@dimen/spacing_small"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingTop="@dimen/spacing_small"
                    android:text="安装信息"
                    android:textColor="@color/textTertiary"
                    android:textSize="10sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divPrimary"
                    />

                <LinearLayout
                    android:id="@+id/ll_order_detail_install"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    >

                    <TextView
                        android:id="@+id/tv_order_install_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="@dimen/spacing_tiny"
                        android:text="联系电话\n姓名\n预约安装时间\n状态"
                        android:textColor="@color/textSecondary"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/tv_order_install_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:lineSpacingExtra="@dimen/spacing_tiny"
                        android:text="联系电话\n姓名\n预约安装时间\n状态"
                        android:textColor="@color/textPrimary"
                        android:textSize="10sp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divPrimary"
                    />

                <Button
                    android:id="@+id/btn_order_install_contact"
                    android:layout_width="76dp"
                    android:layout_height="22dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/btn_radius_stroke_divider"
                    android:drawableLeft="@mipmap/icon_tel_azry"
                    android:drawablePadding="@dimen/spacing_tiny"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/spacing_small"
                    android:text="联系用户"
                    android:textColor="@color/textSecondary"
                    android:textSize="9sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_order_detail_confirm"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/colorAccent"
        android:text="确认并发送给用户"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body"
        android:visibility="gone"
        />

</LinearLayout>
